<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TVControllerActivity" >
    
    <LinearLayout
        android:id="@+id/dual_screen_view_wrapper"
        android:layout_width="1280px"
        android:layout_height="720px"
        android:padding="1dp"
        android:orientation="vertical"
        android:visibility="gone">
        <com.sdevrel.example.screencast.DualScreenView
            android:id="@+id/dual_screen_view"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </com.sdevrel.example.screencast.DualScreenView>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/screen_cast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_screen_cast" />

        <Button
            android:id="@+id/mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dual_mode"
            android:visibility="gone" />
    </LinearLayout>
    
</RelativeLayout>